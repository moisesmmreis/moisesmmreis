---
export interface Props {
  src: string;
  alt: string;
  sub: string;
}

const { src, alt, sub } = Astro.props as Props;
---

<div class="relative flex flex-col gap-2 max-h-fit">
  <span class="text-sm text-default-900/70">{sub}</span>
  <img class="object-cover rounded-2xl" src={src} alt={alt} />  
  <ul class="p-2.5 flex flex-row justify-between content-center items-center gap-2 absolute bottom-4 left-[50%] -translate-x-[50%] rounded-xl backdrop-blur-sm">
    <li class="bg-white/90 backdrop-blur-sm rounded-full h-2.5 w-2.5" />
    <li class="bg-white opacity-50 backdrop-blur-sm rounded-full h-2.5 w-2.5" />
    <li class="bg-white opacity-50 backdrop-blur-sm rounded-full h-2.5 w-2.5" />
    <li class="bg-white opacity-50 backdrop-blur-sm rounded-full h-2.5 w-2.5" />
  </ul>
</div>
