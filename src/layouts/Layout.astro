---
import "@fontsource/ibm-plex-serif";
import "@fontsource/inter";

import Header from "./Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Software Engineering and UI/UX" />
    <meta name="author" content="MoisÃ©s Reis" />
    <title>{title}</title>
    <script>
      import { webVitals } from "../lib/vitals";

      let analyticsId = import.meta.env.PUBLIC_VERCEL_ANALYTICS_ID;

      if (analyticsId) {
        webVitals({
          path: location.pathname,
          params: location.search,
          analyticsId,
        });
      }
    </script>
  </head>
  <body class="text-default-900 overflow-x-hidden px-12 md:px-64 font-sans group">
    <Header />
    <slot />
    <div
      class="fixed z-50 w-6 h-6 top-0 left-0 bg-white border rounded-full pointer-events-none opacity-0 transition-opacity group-hover:opacity-100"
      id="mouse-trail"
    >
    </div>
  </body>
</html>

<script>
  const Trail = document.getElementById("mouse-trail");

  const animateTrail = (e) => {
    const x = e.clientX - Trail.offsetWidth / 2,
      y = e.clientY - Trail.offsetHeight / 2;

    const keyframes = {
      transform: `translate(${x}px, ${y}px)`,
    };

    Trail.animate(keyframes, {
      duration: 300,
      fill: "forwards",
    });
  };

  window.onmousemove = (e) => {
    animateTrail(e);
  };
</script>
