---
import "@fontsource/ibm-plex-serif";
import "@fontsource/inter";

import Header from "./Header.astro";
import Trail from "../components/Trail.astro";
import Footer from "./Footer.astro"

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Software Engineering and UI/UX" />
    <meta name="author" content="MoisÃ©s Reis" />
    <title>{title}</title>
    <script>
      import { webVitals } from "../lib/vitals";

      let analyticsId = import.meta.env.PUBLIC_VERCEL_ANALYTICS_ID;

      if (analyticsId) {
        webVitals({
          path: location.pathname,
          params: location.search,
          analyticsId,
        });
      }
    </script>
  </head>
  <body class="text-default-900 overflow-x-hidden px-6 xl:px-64 font-sans group">
    <Header />
    <slot />
    <Trail />
    <Footer />
  </body>
</html>
